{% extends 'admin/base.html.twig' %}

{% block title %}Modification de la réservation {{booking.id}} {% endblock %}

{% block body %}
    <div class="container">
    <h1 class="my-5">Modification de la réservation {{booking.id}}</h1>
        <div class="alert alert-info mt-5">
            <strong>Annonce liée :</strong> {{booking.ad.title}} <br>
            <strong>Visiteur :</strong> {{booking.booker.fullName}} <br>
            <strong>Date de création :</strong> {{booking.startDate| date('d/m/Y H:i')}}
        </div>
        {{form_start(form)}}
        <div class="row">
            <div class="col">
                {{form_row(form.startDate)}}
                {{form_row(form.endDate)}}
                {{form_row(form.comment)}}
            </div>
            <div class="col">
                {{form_row(form.booker)}}
                {{form_row(form.ad)}}
                <button type="submit" class="btn btn-success">
                Enregistrer les modifications
                <i class="fas fa-check"></i>
                </button>
            </div>
        </div>
        
        {{form_end(form)}}
    </div>
{% endblock %}